<h2 id="title">Welcome to Ember</h2>

<div>
  X: {{input type="number" value=snapX}}
  Y: {{input type="number" value=snapY}}
</div>
<div>
  offsetTop:     {{input type="number" value=offsetTop}}
  offsetRight:   {{input type="number" value=offsetRight}}
  offsetBottom:  {{input type="number" value=offsetBottom}}
  offsetLeft:    {{input type="number" value=offsetLeft}}
  Constrain:     {{input type="checkbox" checked=cancelOffset}}
</div>

{{#ember-snip
  offsetTop    = offsetTop
  offsetLeft   = offsetLeft
  offsetRight  = offsetRight
  offsetBottom = offsetBottom
  cancelOffset = cancelOffset
  on-end       = undefined
  as |snip|}}
  foo
  {{snip.snipee
    snapX = snapX
    snapY = snapY
    }}
  {{snip.snipee}}
{{/ember-snip}}
